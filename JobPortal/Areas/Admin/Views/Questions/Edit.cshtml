@model JobPortal.Models.Question

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Secret Question</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.quesId)

        <div class="form-group">
            @Html.LabelFor(model => model.ques, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.ques, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ques, "", new { @class = "col-md-4 text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
