@model RegisterUserViewModel

@{
    ViewBag.Title = "User Registration";
}

<form method="post">
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header text-center bg-primary">
                    <h2><b>User Registration</b></h2>
                </div>

                <div class="card-body text-left">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-12 col-form-label">Email</label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="Email" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-12 col-form-label">Password</label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-sm-12 col-form-label">Confirm Password</label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="ConfirmPassword" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-left">
                    <button type="submit" class="btn btn-primary" style="width:auto">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>
